<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewConstructorPosition"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/f1_reg"
            android:paddingLeft="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewConstructor"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/f1_reg"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewConstructorWins"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/f1_bold"
            android:textColor="#1e1e1e"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textViewConstructorPoints"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ff0000"
            android:textSize="13sp"
            android:fontFamily="@font/f1_reg"
            android:textStyle="italic"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewConstructorNationality"
        android:layout_width="122dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/f1_reg"
        android:textColor="#1e1e1e"
        android:textSize="15sp"
        android:textStyle="italic"/>
</LinearLayout>